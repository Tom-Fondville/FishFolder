<UserControl x:Class="FishFolder.View.UserControls.ProjectCreator"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:FishFolder.View.UserControls"
             mc:Ignorable="d"
             d:DesignHeight="40" d:DesignWidth="300">
    <Grid Background="LightGray">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="50"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        
        <Button Name="SelectFolderButton" Width="50" Height="25" 
                HorizontalAlignment="Right" VerticalAlignment="Center"
                Margin="0,0,5,0"
                Content="folder" Click='SelectFolderButton_OnClick'
        ></Button>
        
        <Button Grid.Column="1" Name="AddButton" Width="50" Height="50" 
                HorizontalAlignment="Right" VerticalAlignment="Center"
                Content="+" Click="AddButton_OnClick"
        ></Button>
        
    </Grid>
</UserControl>
